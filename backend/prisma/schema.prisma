generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String          @id @default(uuid())
  name         String
  email        String          @unique
  passwordHash String
  role         UserRole        @default(STUDENT)
  avatarUrl    String?
  lastLoginAt  DateTime?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  sessions     TypingSession[]
  dictations   DictationResult[]
}

enum UserRole {
  STUDENT
  ADMIN
}

model TypingSession {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  wpm         Int
  accuracy    Float
  language    String
  font        String
  durationSec Int
  mode        String
  createdAt   DateTime @default(now())
}

model DictationTest {
  id            String   @id @default(uuid())
  title         String
  description   String
  language      String
  difficulty    String
  audioUrl      String
  transcriptUrl String
  isPremium     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  results       DictationResult[]
}

model DictationResult {
  id            String        @id @default(uuid())
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  dictation     DictationTest @relation(fields: [dictationId], references: [id], onDelete: Cascade)
  dictationId   String
  grossWpm      Int
  netWpm        Int
  accuracy      Float
  score         Float
  createdAt     DateTime      @default(now())
}
